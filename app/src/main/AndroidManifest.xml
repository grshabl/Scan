<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.av.test">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="ru.av.permission.SCANNER_RESULT_RECEIVER" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ScannerActivity"></activity>
        <activity android:name=".activities.PlodChooseActivity"></activity>

        <activity android:name=".activities.BoxesViewActivity"></activity>

        <activity android:name=".activities.BoxActivity"></activity>
        <activity android:name=".activities.SettingsActivity"></activity>
        <activity android:name=".activities.BoxViewActivity"></activity>

        <receiver
            android:name=".activities.ScannerActivity$ScanResultReceiver"
            android:enabled="false"
            android:permission=".app.permission.SCANNER_RESULT_RECEIVER"
            android:priority="0">
            <intent-filter>
                <action android:name="device.scanner.USERMSG" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".activities.BoxesViewActivity$ScanResultReceiver"
            android:enabled="false"
            android:permission=".app.permission.SCANNER_RESULT_RECEIVER"
            android:priority="0">
            <intent-filter>
                <action android:name="device.scanner.USERMSG" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".activities.BoxViewActivity$ScanResultReceiver"
            android:enabled="false"
            android:permission=".app.permission.SCANNER_RESULT_RECEIVER"
            android:priority="0">
            <intent-filter>
                <action android:name="device.scanner.USERMSG" />
            </intent-filter>
        </receiver>
    </application>

</manifest>